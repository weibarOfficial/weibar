<view class="page">
    <view class="weui-msg">
        
        <image src="http://img1.3lian.com/2015/w7/85/d/101.jpg" mode="aspectFill">  </image>
        
        <view class="weui-msg__text-area">
            <view class="weui-msg__desc">明早打卡随机瓜分金额（元）</view>
            <view class="weui-msg__title daka-money">{{tomorrowDakaMoney}}</view>
            <view class="weui-msg__desc"><navigator url="/pages/index/article" class="weui-msg__link">游戏规则</navigator></view>
        </view>
        <view class="weui-msg__opr-area">
            <view class="weui-btn-area">
                <button class="weui-btn" type="primary" bindtap="payForDaka">支付一元参与打卡</button>
                <button class="weui-btn" type="primary" disabled="true">页面主操作 Disabled</button>
                <!--<button class="weui-btn" type="default" bindtap="inviteFriends">邀请好友参加</button>-->
            </view>
        </view>

        <view class="weui-msg__text-area">
            <view class="weui-msg__title daka-zhankuang">今日打卡战况</view>
            <view class="weui-msg__desc">{{suceessDaka}}人打卡成功，{{failDaka}}人打卡失败</view>
        </view>
    </view>
</view>